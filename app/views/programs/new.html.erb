<h1 class="big_title">新しい番組</h1>

<%= form_with model: @program, url: programs_path, class:'form-wrap', local: true do |f| %>


  <div class='program-form'>
    <div class='field'>
      <div class="date-field">
        <%= f.label :date, "放送日時" %>
        <%= f.text_field :date, class:"input-date" %>
      </div>
      <div class="title-field">
        <%= f.label :title, "番組名" %>
        <%= f.text_field :title, class:"input-title" %>
      </div>
      <div class="fact-field">
        <%= f.label :fact, "番組内容" %>
        <%= f.text_area :fact, class:"input-fact" %>
      </div>
      <div class="feeling-field">
        <%= f.label :feeling, "感想" %>
        <%= f.text_area :feeling, class:"input-feeling"%>
      </div>

      <div class="tag-field", id='tag-field'>
        <%= f.label :name, "タグ" %>
        <%= f.text_field :name, class:"input-tag" %>
      </div>
      <div id="search-result">
      </div>

  </div>

  <div class="submit-post">
    <%= f.submit "投稿する", class: "submit-btn" %>
    <%= link_to 'トップに戻る', root_path, class:"back-btn" %>
  </div>

<% end %>