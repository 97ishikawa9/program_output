<h1 class="big_title">新しい番組</h1>

<%= form_with model: @program, url: programs_path, class:'form-wrap', local: true do |f| %>


  <div class='program-form'>
    <div class="field">
      <%= f.label :title, "番組名" %>
      <%= f.text_field :title, class:"input-form" %>
    </div>
    <div class="field">
      <%= f.label :date, "放送日時" %>
      <%= f.text_field :date, class:"input-form" %>
    </div>
    <div class="field">
      <%= f.label :title, "要約" %>
      <%= f.text_field :summary, class:"input-form" %>
    </div>
    <div class="field">
      <%= f.label :fact, "番組内容" %>
      <%= f.text_area :fact, class:"input-form" %>
    </div>
    <div class="field">
      <%= f.label :feeling, "感想" %>
      <%= f.text_area :feeling, class:"input-form"%>
    </div>
    <div class="field", id='tag-field'>
      <%= f.label :name, "タグ" %>
      <%= f.text_field :name, class:"input-form" %>
    </div>
    <div id="search-result">
    </div>
  </div>

  <div class="submit-post">
    <%= f.submit "投稿する", class: "submit-btn" %>
    <%= link_to 'トップに戻る', root_path, class:"back-btn" %>
  </div>

<% end %>