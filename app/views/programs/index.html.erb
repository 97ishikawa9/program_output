<div class="header">
  <div class="inner-header">
    <h1 class="title">
      俺、何観たんだっけ？
    </h1>
    <li class='new-post'>
      <%= link_to "文字におこす", new_program_path, class:"post-btn" %>
    </li>
  </div>
</div>

<div class="main">
  <div class="program-wrap">
    <% @programs.each do |program|%>
      <div class="program_title">
        <h2 class="text">
          <%= program.title %>
        <p class="date">
          <%= program.date %>
        <a class="fact">
          <%= program.fact %>
        <a class=feeling>
          <%= program.feeling %>
        </p>
        <ul class="tag">
          <li class="tag-list">
            <% program.tags.each do |tag| %>
              #<%= tag.name %>
            <% end %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>